<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profilePage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res/com.hitasoft.apps.milymarket">

    <com.hitasoft.apps.milymarket.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/profilehome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tabbar"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/profile_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@drawable/profile_bg"
                android:orientation="vertical"
                android:padding="0dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal" >

                    <com.hitasoft.apps.adapters.RoundedImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profilePic"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/menu_user"
                        app:corner_radius="10dip" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/profile_userName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="false"
                            android:text="User Name"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            android:textColor="#000000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/profile_userId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="false"
                            android:text="User_Id"
                            android:textAppearance="@android:style/TextAppearance.Small"
                            android:textColor="#000000" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#bdbdbd" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="10dp"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:weightSum="4" >
                    
                    <TextView
                        android:id="@+id/about"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:singleLine="false"
                        android:text=""
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:textColor="#000000" />

                     <LinearLayout
                            android:id="@+id/followlay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="#dc143c"
                            android:clickable="true"
                            android:padding="6dp"
                            android:textStyle="bold"
                            android:layout_weight="0.5" >

                            <TextView
                                android:id="@+id/followtxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="status"
                                android:textStyle="bold" />
                        </LinearLayout>
                    
                    
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#bdbdbd" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >
<!--
                    <LinearLayout
                        android:id="@+id/itemfavourated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0.25"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/prifilePage_favourated_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textAppearance="@android:style/TextAppearance.Small"
                            android:textColor="#000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="J'aime"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textAppearance="@android:style/TextAppearance.Small"
                            android:textColor="#000000" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dip"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="4dp"
                        android:background="#bdbdbd" />
                        -->

                    <LinearLayout
                        android:id="@+id/itemadded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0.25"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/prifilePage_added_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textAppearance="@android:style/TextAppearance.Small"
                            android:textColor="#000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Boutique"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textAppearance="@android:style/TextAppearance.Small"
                            android:textColor="#000000" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dip"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="3dp"
                        android:background="#bdbdbd" />

                    <LinearLayout
                        android:id="@+id/followersLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/prifilePage_followers_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="0"
                            android:textAppearance="@android:style/TextAppearance.Small"
                            android:textColor="#000000"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Abonnés"
                            android:textAppearance="@android:style/TextAppearance.Small"
                            android:textColor="#000000"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dip"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="4dp"
                        android:background="#bdbdbd" />

                    <LinearLayout
                        android:id="@+id/followingLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0.25"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/prifilePage_following_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="0"
                            android:textAppearance="@android:style/TextAppearance.Small"
                            android:textColor="#000000"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Abonnements"
                            android:textAppearance="@android:style/TextAppearance.Small"
                            android:textColor="#000000"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

              <com.etsy.android.grid.StaggeredGridView
                  xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:id="@+id/homePage_gallery"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_above="@+id/loadImageLayout"
                  android:layout_below="@+id/profile_view"
                  android:horizontalSpacing="20dp"
                  android:numColumns="auto_fit"
                  android:scrollbars="none"
                  android:stretchMode="columnWidth"
                  android:verticalSpacing="20dp"
                  app:column_count="2"
                  app:item_margin="10dp" />

            <RelativeLayout
                android:id="@+id/loadImageLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/txt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Un instant s'il vous plait......"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/bottomhome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="@string/LoadingItems" />
            </LinearLayout>
        </LinearLayout>
    </com.hitasoft.apps.milymarket.BounceScrollView> 

    <TextView
        android:id="@+id/homenulltext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="14dp"
        android:gravity="center"
        android:text="@string/noItem"
        android:textColor="#000000"
        android:textSize="14sp"
        android:visibility="invisible" />

    <include
        android:id="@+id/tabbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/tab" />

</RelativeLayout>
